--TABLE FOR STUDENTS

CREATE TABLE STUDENTS
(
MEMBER_ID NUMBER (10) NOT NULL,
STUDENT_NUMBER NUMBER (10) NOT NULL,
FOREIGN KEY (MEMBER_ID) REFERENCES MEMBERS(MEMBER_ID) ON DELETE CASCADE
); 

