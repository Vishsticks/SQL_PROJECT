-- TABLE FOR LOAN LIMIT

CREATE TABLE LOAN_LIMIT
(
LOAN_LIMIT_ID SMALLINT NOT NULL,
MAX_LOANS SMALLINT NOT NULL,
CONSTRAINT LOAN_LIMIT_ID PRIMARY KEY (LOAN_LIMIT_ID)
);

-- VALUES FOR LOAN LIMIT TABLE
INSERT INTO LOAN_LIMIT VALUES  (0001, 5);
INSERT INTO LOAN_LIMIT VALUES  (0002, 10);

-- TABLE FOR MEMBERS

CREATE TABLE MEMBERS
(
MEMBER_ID NUMBER (10) NOT NULL,
FIRST_NAME VARCHAR(50),
LAST_NAME VARCHAR (50),
PHONE_NUMBER VARCHAR (25),
EMAIL_ADDRESS VARCHAR (50),
SUSPENSION_STATUS NUMBER(1),
LOAN_LIMIT_ID SMALLINT,
CONSTRAINT MEMBER_ID PRIMARY KEY (MEMBER_ID),
FOREIGN KEY (LOAN_LIMIT_ID) REFERENCES LOAN_LIMIT(LOAN_LIMIT_ID) ON DELETE CASCADE
);

